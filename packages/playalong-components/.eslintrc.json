{
  "parserOptions": {
    "ecmaVersion": 5
  },
  "extends": [
    "react-app",
    "standard"
  ],
  "rules": {
  	"indent": "off",
    "no-tabs": "off",
    "no-var": "off",
    "strict": "off",
    "padded-blocks": "off",
    "no-param-reassign": "off",
    "consistent-return": "off",
    "func-names": "off",
    "object-shorthand": "off",
    "prefer-arrow-callback": "off",
    "no-else-return": "off",
    "no-use-before-define": "off",
    "no-mixed-spaces-and-tabs": "off",
    "brace-style": "off",
    "max-len": "off",
    "semi": [2,"always"]
  }
}
