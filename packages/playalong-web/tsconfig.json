{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "es2015",
    "allowJs":true,
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "react",
    "lib": [ "es2015", "dom" ],
    "strict": true
  },
  "exclude": [
    "node_modules",
    "bower_components"
  ],
  "paths": {
      "react": ["node_modules/@types/react"]
  }
}
