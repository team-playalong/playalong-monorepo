{
  "swagger": "2.0",
  "info": {
    "version": "0.0.1",
    "title": "Playalong Notifier",
    "description": "Handling all notifications for Playalong",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "tags": [
    {
      "name": "Login",
      "description": "All notifications after a user has logged in"
    }
  ],
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": [
          "Login"
        ],
        "description": "Notify a new user has logged in",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Email has been sent successfully",
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Login": {
      "required": [
        "uid",
        "displayName",
        "email"
      ],
      "properties": {
        "uid": {
          "type": "string"
        },
        "displayName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      }
    }
  }
}
